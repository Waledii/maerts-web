---
import GithubIcon from "../components/GithubIcon.astro";
import MaertsLogo from "../components/MaertsLogo.astro";
---

<div
  class="flex flex-wrap items-center justify-center py-5 px-10 flex-col sm:flex-row sm:justify-between md:px-20 border-b-[1px]"
>
  <div class="flex justify-between items-center w-[9rem]">
    <MaertsLogo />
    <p class="text-[1.5rem] font-medium text-white">Maerts</p>
  </div>
  <div class="flex flex-wrap sm:mt-0 mt-7 gap-6">
    <div class="flex flex-wrap gap-4 justify-center items-center">
      <p class="text-[0.8rem] text-white">Repository on:</p>
      <GithubIcon />
    </div>
    <div class="flex flex-wrap gap-4 justify-center items-center">
      <p class="text-[0.8rem] text-white">Made by:</p>
      <a href="https://github.com/afriguez">
        <img
          src="https://github.com/afriguez.png"
          alt="avatar"
          class="h-[2rem] w-[2rem] rounded-lg"
        />
      </a>
      <a href="https://github.com/adrephos">
        <img
          src="https://github.com/adrephos.png"
          alt="avatar"
          class="h-[2rem] w-[2rem] rounded-lg"
        />
      </a>
    </div>
  </div>
</div>
